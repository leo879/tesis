
<div class="aa" align="center">

<br><br><br>

<h1 align="center">Log in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
      Email:
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Ingresa tu email", autofocus: true %>
        </div>

      <div class="form-group">
        <br>
        Contraseña:
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Ingresa tu contraseña", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">

          <br> <br>
          <%= f.submit "Ingresar", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>